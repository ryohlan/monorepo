{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "target": "esnext",
    "skipLibCheck": true,
    "typeRoots": [
      "./typings",
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
